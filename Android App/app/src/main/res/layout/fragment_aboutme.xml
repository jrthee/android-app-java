<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpurple">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/leftCol"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameLeft"
            android:text="Name:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"/>
        <TextView
            android:id="@+id/cityLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20sp"
            android:paddingTop="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthdate:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20sp"
            android:paddingTop="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20sp"
            android:paddingTop="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20sp"
            android:paddingTop="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rightCol"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameRight"
            android:text="Julia Thee"
            android:textSize="20dp"
            android:paddingTop="20sp"
            android:paddingLeft="20sp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/nameRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Philadelphia"
            android:textSize="20dp"
            android:paddingTop="15sp"
            android:paddingLeft="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/30/1994"
            android:textSize="20dp"
            android:paddingTop="15sp"
            android:paddingLeft="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syracuse University"
            android:textSize="20dp"
            android:paddingTop="15sp"
            android:paddingLeft="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:textSize="20dp"
            android:paddingTop="15sp"
            android:paddingLeft="20sp" />
    </LinearLayout>

</LinearLayout>

